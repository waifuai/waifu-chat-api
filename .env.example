# WaifuAPI Configuration Example
# Copy this file to .env and update with your actual values

# Database Configuration
DATABASE_FILE=dialogs.db

# AI Model Configuration
MODEL_URL=http://localhost:80/path/
DEFAULT_RESPONSE=The AI model is currently unavailable. Please try again later.
DEFAULT_GENRE=Romance

# Server Configuration
PORT=5000
DEBUG=false
HOST=127.0.0.1

# Security Configuration
SECRET_KEY=your-secret-key-here
API_KEY_REQUIRED=false
ALLOWED_ORIGINS=*

# Performance Configuration
MAX_DIALOG_LENGTH=1500
MAX_MESSAGE_LENGTH=1250
MAX_USER_ID_LENGTH=256
MAX_NAME_LENGTH=50

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/waifuapi.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Pagination Configuration
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=1000

# Google Cloud Translate Configuration (if used)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json